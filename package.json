{
  "name": "conventional-commits-changesets",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "build-packages": "turbo lint build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset-version": "changeset && changeset version"
  },
  "devDependencies": {
